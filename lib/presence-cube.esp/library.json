{
    "name": "presence-cube.esp",
    "description": "Composition root of the esp32 platform branch of the presence-cube project. This project is responsible for wiring up the dependency tree and providing the applications entry point.",
    "version": "0.0.1",
    "platforms": [ "espressif32" ],
    "frameworks": [ "espidf" ],
    "srcDir": ".",
    "build": {
        "srcFilter": [
            "+<*.c>"
        ],
        "includeDir": "./"
    },
    "dependencies": {
        "presence-cube.shared": "*",
        "infrastructure.esp": "*",
        "logging.esp": "*",
        "spiffs": "*",
        "wifi_init": "*",
        "led_control": "*",
        "rgb_ledc": "*",
        "delay_service": "*",
        "webserver": "*",
        "web_controllers": "*"
    }
}
